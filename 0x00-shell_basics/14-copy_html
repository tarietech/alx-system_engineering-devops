#!/bin/bash

# Set the source and destination directories
source_dir=$(pwd)
destination_dir=$(dirname "$source_dir")

# Iterate through HTML files in the source directory
for file in "$source_dir"/*.html; do
    # Get the filename
    filename=$(basename "$file")
    
    # Check if the file already exists in the destination directory
    if [ -f "$destination_dir/$filename" ]; then
        # Compare file modification times
        if [ "$file" -nt "$destination_dir/$filename" ]; then
            # Copy the file if it is newer
            cp "$file" "$destination_dir"
            echo "Copied newer file: $filename"
        else
            echo "Skipping older file: $filename"
        fi
    else
        # Copy the file if it does not exist in the destination directory
        cp "$file" "$destination_dir"
        echo "Copied new file: $filename"
    fi
done
